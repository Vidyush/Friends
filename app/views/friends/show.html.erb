<div class="h-100 p-5 text-white bg-dark rounded-3">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  </br>
  <p class="lead"><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>
  </br>
  <%= link_to 'Edit', edit_friend_path(@friend),class:"btn btn-dark" %> 
<%= link_to 'Back', friends_path,class:"btn btn-info" %>
<%= link_to 'Delete', @friend, method: :delete,class:"btn btn-danger", data: { confirm: 'Are you sure?' } %>
</div>




